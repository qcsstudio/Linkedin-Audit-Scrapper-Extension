{
  "manifest_version": 3,
  "name": "ElevatrX LinkedIn Profile Scanner",
  "version": "1.0",
  "description": "Instantly analyze any LinkedIn profile and generate an AI-powered profile score and improvement checklist in your browser.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["*://*.linkedin.com/*", "<all_urls>"],
  "background": {"service_worker": "background.js"},
  "content_scripts": [
    {
     "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "http://localhost:3000/*",
        "https://quantumcrafters-studio.vercel.app/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": { "default_title": "LinkedIn Audit" }
}
