{
  "manifest_version": 3,
  "name": "LinkedIn Audit Scraper",
  "version": "1.0",
  "description": "Scrapes public LinkedIn profiles and sends data to backend for scoring.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["*://*.linkedin.com/*", "<all_urls>"],
  "background": {"service_worker": "background.js"},
  "content_scripts": [
    {
     "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "http://localhost:3000/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": { "default_title": "LinkedIn Audit" }
}
